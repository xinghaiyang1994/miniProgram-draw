page,
.wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.left,
.right {
  width: 100%;
  height: 15%;
}

.left {
  position: relative;
}

.middle {
  width: 100%;
  height: 70%;
}
.canvas-wrap{
  box-shadow: 0 0 20rpx #000;
  width: 650rpx;
  margin: 0 auto;
  height: 100%;
  box-sizing: border-box;
  border: 2rpx solid #000;
  position: relative;
}
.canvas {
  width: 100%;
  height: 800rpx;
}
.can-rect{
  position: absolute;
  /* width: 100rpx;
  height: 100rpx; */
  /* background: red; */
  border: 1rpx solid red;
  top: 0;
  left: 0;
}

.nav {
  width: 100%;
  height: 60%;
  position: absolute;
  right: 90rpx;
  bottom: 0;
}

.nav-ls {
  width: 60rpx;
  height: 100%;
  border-left: 2rpx solid #000;
  border-right: 2rpx solid #000;
  margin-left: 40rpx;
  position: relative;
  font-size: 24rpx;
  transition: all 0.5s;
}
.nav-ls-cur{
  padding-top: 30rpx;
  margin-top: -28rpx;
}
.nav-ls::before {
  content: '';
  display: block;
  position: absolute;
  top: -60rpx;
  left: 0;
  width: 20rpx;
  height: 0;
  border: 20rpx solid transparent;
  border-bottom: 50rpx solid red; 
}

.nav-ls::after {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 20rpx;
  background: red;
  border-bottom: 10rpx solid #000;
  border-top: 1rpx solid #000;
}

.nav-ls-txt {
  position: absolute;
  bottom: 6rpx;
  left: 6rpx;
  width: 2em;
  line-height: 60rpx;
  transform: rotateZ(90deg);
}