page,
.wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.left,
.right {
  width: 100%;
  height: 15%;
  position: relative;
}

.left {
  position: relative;
}

.middle {
  width: 100%;
  height: 70%;
}
.canvas-wrap{
  box-shadow: 0 0 20rpx #000;
  width: 650rpx;
  margin: 0 auto;
  height: 100%;
  box-sizing: border-box;
  border: 2rpx solid #000;
  position: relative;
  overflow: hidden;
}
.canvas {
  width: 100%;
  height: 830rpx;
  background: #fff;
}
.can-rect{
  position: absolute;
  z-index: 1;
  border: 1px solid #1D8CE0;
  width: 100px;
  height: 100px;
  top: -100px;
  left: 0;
}

.nav {
  width: 100%;
  height: 60%;
  position: absolute;
  right: 90rpx;
  bottom: 0;
}

.nav-ls {
  width: 60rpx;
  height: 100%;
  border-left: 2rpx solid #000;
  border-right: 2rpx solid #000;
  margin-left: 40rpx;
  position: relative;
  font-size: 24rpx;
  transition: all 0.5s;
}
.nav-ls-cur{
  padding-top: 30rpx;
  margin-top: -28rpx;
}
.nav-ls::before {
  content: '';
  display: block;
  position: absolute;
  top: -60rpx;
  left: 0;
  width: 20rpx;
  height: 0;
  border: 20rpx solid transparent;
  border-bottom: 50rpx solid #58B7FF; 
}

.nav-ls::after {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 20rpx;
  background: #58B7FF;
  border-bottom: 10rpx solid #000;
  border-top: 1rpx solid #000;
}

.nav-ls-txt {
  position: absolute;
  bottom: 6rpx;
  left: 6rpx;
  width: 2em;
  line-height: 60rpx;
  transform: rotateZ(90deg);
}

.pen{
  margin-right: 200rpx;
  margin-top: 40rpx;
}
.pen-num-wrap{
  width: 92rpx;
  height: 92rpx;
  text-align: center;
  line-height: 92rpx;
}
.pen-num{
  transform: rotateZ(90deg);
}

.color{
  margin-right: 100rpx;
  margin-top: 40rpx;
}
.color-ls{
  width: 50rpx;
  height: 50rpx;
  border: 10rpx solid transparent;
  box-sizing: content-box;
  margin-right: 20rpx;
}
.color-ls-cur{
  border-color: #000;
}

.clear{
  position: absolute;
  left: 0;
  top: 10rpx;
  transform: rotateZ(90deg);
}

.rect{
  margin-top: 40rpx;
}

.save{
  position: absolute;
  top: 40rpx;
  left: 0;
  transform: rotateZ(90deg);
}
.img{
  position: absolute;
  top: 200rpx;
  left: 0;
}
.rect-ls{
  width: 50rpx;
  height: 50rpx;
  border: 10rpx solid #20A0FF;
  box-sizing: content-box;
  position: relative;
  margin-right: 50rpx;
}
.rect-ls:first-child{
  margin-right: 250rpx;
  background: #20A0FF;
}
.rect-ls-cur::before{
  content: '';
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  background: red;
  top: 70rpx;
  left: 50%;
}

